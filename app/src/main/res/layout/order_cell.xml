<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:elevation="3dp"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteOrderCell"
            android:src="@drawable/close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
            android:id="@+id/imageViewCellOrder"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="13dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@id/imageViewCellOrder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewTitleCellOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingEnd="10dp"
                android:shadowColor="#CD1515"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="9.0"
                android:text="Pedido Mesa 1 (18:50hs)"
                android:textColor="#000000"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
 />

            <TextView
                android:id="@+id/textViewTotalCellOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:shadowColor="#CD1515"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="9.0"
                android:text="$200"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitleCellOrder" />

            <TextView
                android:id="@+id/textViewPaymentCellOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:shadowColor="#CD1515"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="9.0"
                android:text="Efectivo"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textViewTotalCellOrder"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitleCellOrder" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textViewDetailsCellOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:text="Solicita camarero/a!!!"
            android:textColor="#000000"
            android:shadowColor="#CD1515"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="9.0"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCellOrder"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>